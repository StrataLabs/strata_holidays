- model_class = CustItiHeader
- p @cust_iti_header
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:custoemr_id) + ':'
  %br
  = @cust_iti_header.customer.name rescue 'NA'
%p
  %strong= model_class.human_attribute_name(:cust_iti_name) + ':'
  %br
  = @cust_iti_header.cust_iti_name
%p
  %strong= model_class.human_attribute_name(:iti_type) + ':'
  %br
  = @cust_iti_header.iti_type
%p
  %strong= model_class.human_attribute_name(:vacation_type_id) + ':'
  %br
  = @cust_iti_header.vacation_type_id
%p
  %strong= model_class.human_attribute_name(:trip_start_date) + ':'
  %br
  = @cust_iti_header.trip_start_date
%p
  %strong= model_class.human_attribute_name(:trip_end_date) + ':'
  %br
  = @cust_iti_header.trip_end_date
%p
  %strong= model_class.human_attribute_name(:seasons) + ':'
  %br
  = @cust_iti_header.seasons
%p
  %strong= model_class.human_attribute_name(:duration) + ':'
  %br
  = @cust_iti_header.duration
%p
  %strong= model_class.human_attribute_name(:no_of_adults) + ':'
  %br
  = @cust_iti_header.no_of_adults
%p
  %strong= model_class.human_attribute_name(:no_of_children) + ':'
  %br
  = @cust_iti_header.no_of_children

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cust_iti_headers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_cust_iti_header_path(@cust_iti_header), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), cust_iti_header_path(@cust_iti_header), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
