%title
  Unwinders | History
.tabbable
  / Only required for left/right tabs
  - details = @cust_iti_header.cust_iti_details
  %ul.nav.nav-tabs
    -details.each_with_index do |d,index|
      -if index == 0
        %li.active
          %a{"data-toggle" => "tab", :href => "#tab_#{index}"}
            = d.destination.name
      -else
        %li
          %a{"data-toggle" => "tab", :href => "#tab_#{index}"}
            = d.destination.name
  .tab-content
    -details.each_with_index do |d,index|
      -if index == 0
        %div{:id => "tab_#{index}", :class => "tab-pane active"}
          .container
            .row-fluid
              .well.span6.history-large-pic{:style => "background-image:url(#{d.destination.image.url});background-size:auto;background-repeat:no-repeat;"}
                .history-image-info
                  .heading{:style => 'font-size:20px;padding-bottom:10px'}
                    = d.destination.name
                  = d.destination.description
                .row.span4.offset4.history-image-info{:style => 'text-align:center'}
                  = @cust_iti_header.trip_start_date.strftime("%d-%m-%y")
                  to
                  = @cust_iti_header.trip_end_date.strftime("%d-%m-%y")
                .row.span4.offset4.btn.btn-success.btn-large#comment-section
                  Trip Feedback?
              .span4.well
                - ary = ["Destinations", "Poa", "Property"]
                - 4.times do |s|
                  - if s.even?
                    = ary[Random.rand(3).to_i]
                  .row-fluid
                    .span6
                      %div{:id => "history-poa-"+Random.rand(100).to_s}
                        = link_to "#" do
                          = image_tag("unwinders/pondi/#{Random.rand(7)+1}.jpg", size: "160x90")
                      .contenthover{:id => "#{Random.rand(100)}"}
                        Poa Details with Time
                    .span6
                      #history-poa
                        = link_to "#" do
                          = image_tag("unwinders/pondi/#{Random.rand(7)+1}.jpg", size: "160x90")
                      .contenthover{:id => "#{Random.rand(100)}"}
                        Poa Details with Time
                  %br
                  - if s.even?
                    %hr
      -else
        %div{:id => "tab_#{index}", :class => "tab-pane"}
          .container
            .row-fluid
              .well.span6.history-large-pic{:style => "background:transparent;background-image:url(#{d.destination.image.url});background-size:cover;background-repeat:no-repeat;"}
                .history-image-info
                  .heading{:style => 'font-size:20px;padding-bottom:10px'}
                    = d.destination.name
                  = d.destination.description
                .row.span4.offset4.history-image-info{:style => 'text-align:center'}
                  = @cust_iti_header.trip_start_date.strftime("%d-%m-%y")
                  to
                  = @cust_iti_header.trip_end_date.strftime("%d-%m-%y")
                .row.span4.offset4.btn.btn-success.btn-large#comment-section
                  Trip Feedback?
              .well.span4
                - ary = ["Destinations", "Poa", "Property"]
                - 4.times do |s|
                  - if s.even?
                    = ary[Random.rand(3).to_i]
                  .row-fluid
                    .span6
                      %div{:id => "history-poa-"+Random.rand(100).to_s}
                        = link_to "#" do
                          = image_tag("unwinders/pondi/#{Random.rand(7)+1}.jpg", size: "160x90")
                      .contenthover{:id => "#{Random.rand(100)}"}
                        Poa Details with Time
                    .span6
                      #history-poa
                        = link_to "#" do
                          = image_tag("unwinders/pondi/#{Random.rand(7)+1}.jpg", size: "160x90")
                      .contenthover{:id => "#{Random.rand(100)}"}
                        Poa Details with Time
                  %br
                  - if s.even?
                    %hr

