#comment-modal.modal.hide.fade{"tabindex" => "-1"}
  .modal-header
    %a.close{"data-dismiss" => "modal"} x
    %h3 How did you feel ?
  .modal-body
    .modal-rec-body
      %form
        What worked ?
        %textarea{:rows => "3"}
        %br
        %br
        What did not ?
        %textarea{:rows => "3"}
  .modal-footer
    / = link_to "Done" , "#" , :class => 'btn btn-primary'
    %a.btn{"data-dismiss" => "modal", :href => "#"} Make History
    %a.btn{"data-dismiss" => "modal", :href => "#"} Close