- model_class = CustItiDetail
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:cust_iti_header_id) + ':'
  %br
  = @cust_iti_detail.cust_iti_header_id
%p
  %strong= model_class.human_attribute_name(:destination_id) + ':'
  %br
  = @cust_iti_detail.destination_id
%p
  %strong= model_class.human_attribute_name(:destination_group_id) + ':'
  %br
  = @cust_iti_detail.destination_group_id
%p
  %strong= model_class.human_attribute_name(:dest_start_date) + ':'
  %br
  = @cust_iti_detail.dest_start_date
%p
  %strong= model_class.human_attribute_name(:dest_end_date) + ':'
  %br
  = @cust_iti_detail.dest_end_date
%p
  %strong= model_class.human_attribute_name(:property_id) + ':'
  %br
  = @cust_iti_detail.property_id
%br
= nested_comments @comments
= render "comments/form"

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cust_iti_details_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_cust_iti_detail_path(@cust_iti_detail), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), cust_iti_detail_path(@cust_iti_detail), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
