  %head
    %title Strata Holidays
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "unwinders/application", :media => "all"
    / = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
  %body{:id => "list"}
