      %h1
        %a{:href => "/"} JustBooks
      #menu
        #search
          %input{:name => "search", :type => "text"}/
        .container
          %h2.branch_name Strata Holidays
      #submenu
        %ul
          %li= link_to "Signin", "#"
          %li= link_to "Signup", "#"
          %li= link_to "Destinations", '#'
          %li= link_to "About Us", '#'
          %li= link_to "Contact Us", '#'
    / = render :partial => 'flash', :object => flash
    = yield
    #footer
      %ul.navigation
        %li= link_to "About Us", ""
        %li= link_to "Membership Plans", ""
        %li= link_to "Terms & Conditions", ""
        %li= link_to "Franchise Enquiries", ""
        %li= link_to "Store Locations", ""
        %li= link_to "Contact us", ""
      .contact
        %p
          %strong Reach Out:
          Monday through Saturday 9:30 AM to 6:00 PM
        %p
          %strong Customer Care:
          +91 80 30752626
        %p
          %strong Toll Free:
          1-800-102-2665
        %p
          %strong Customer Support:
          %a{:href => "mailto:customercare@justbooksclc.com"} customercare@justbooksclc.com
