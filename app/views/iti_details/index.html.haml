- model_class = ItiDetail
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:iti_header_id)
      %th= model_class.human_attribute_name(:destination_id)
      %th= model_class.human_attribute_name(:day_number)
      %th= model_class.human_attribute_name(:property_id)
      %th= model_class.human_attribute_name(:iti_date)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @iti_details.each do |iti_detail|
      %tr
        %td= link_to iti_detail.id, iti_detail_path(iti_detail)
        %td= iti_detail.iti_header_id
        %td= iti_detail.destination_id
        %td= iti_detail.day_number
        %td= iti_detail.property_id
        %td= iti_detail.iti_date
        %td= iti_detail.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_iti_detail_path(iti_detail), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), iti_detail_path(iti_detail), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_iti_detail_path, :class => 'btn btn-primary'
