- model_class = ItiDetail
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:iti_header_id) + ':'
  %br
  = @iti_detail.iti_header_id
%p
  %strong= model_class.human_attribute_name(:destination_id) + ':'
  %br
  = @iti_detail.destination_id
%p
  %strong= model_class.human_attribute_name(:day_number) + ':'
  %br
  = @iti_detail.day_number
%p
  %strong= model_class.human_attribute_name(:property_id) + ':'
  %br
  = @iti_detail.property_id
%p
  %strong= model_class.human_attribute_name(:iti_date) + ':'
  %br
  = @iti_detail.iti_date

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), iti_details_path(:iti_header_id => @iti_detail.iti_header_id), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_iti_detail_path(@iti_detail), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), iti_detail_path(@iti_detail), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
