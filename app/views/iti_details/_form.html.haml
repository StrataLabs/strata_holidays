= simple_form_for @iti_detail, :html => { :class => 'form-horizontal' } do |f|
  = f.association :iti_header, :include_blank => false
  = f.association :destination
  = f.input :day_number
  = f.association :property, :label_method => lambda{|prop| "#{prop.name} - #{prop.destination.name}"}
  = f.input :iti_date
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), iti_details_path, :class => 'btn'
