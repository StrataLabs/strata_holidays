= simple_form_for @iti_detail, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :iti_header_id, :class => 'control-label'
    .controls
      = f.text_field :iti_header_id, :class => 'text_field'
  .control-group
    = f.label :destination_id, :class => 'control-label'
    .controls
      = f.text_field :destination_id, :class => 'text_field'
  .control-group
    = f.label :day_number, :class => 'control-label'
    .controls
      = f.text_field :day_number, :class => 'text_field'
  .control-group
    = f.label :property_id, :class => 'control-label'
    .controls
      = f.text_field :property_id, :class => 'text_field'
  .control-group
    = f.label :iti_date, :class => 'control-label'
    .controls
      = f.text_field :iti_date, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), iti_details_path, :class => 'btn'
