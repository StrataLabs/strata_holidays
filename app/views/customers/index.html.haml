- model_class = Customer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
=will_paginate(@customers)
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:address_1)
      %th= model_class.human_attribute_name(:address_2)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:country)
      %th= model_class.human_attribute_name(:lphone)
      %th= model_class.human_attribute_name(:mphone)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:comments)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @customers.each do |customer|
      %tr
        %td= link_to customer.id, customer_path(customer)
        %td= customer.name
        %td= customer.address_1
        %td= customer.address_2
        %td= customer.city
        %td= customer.state
        %td= customer.country
        %td= customer.lphone
        %td= customer.mphone
        %td= customer.email
        %td= customer.comments
        %td=l customer.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_path(customer), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_path(customer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_customer_path, :class => 'btn btn-primary'
