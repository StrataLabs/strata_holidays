.container{:style => 'background:#f0f0f0;padding:0px'}
  - model_class = Customer
  #profile{:style => 'padding-left:20px;padding-top:80px'}
    %p
      %strong= model_class.human_attribute_name(:name) + ':'
      %br
      = @customer.name
    %p
      %strong= model_class.human_attribute_name(:address_1) + ':'
      %br
      = @customer.address_1
    %p
      %strong= model_class.human_attribute_name(:address_2) + ':'
      %br
      = @customer.address_2
    %p
      %strong= model_class.human_attribute_name(:city) + ':'
      %br
      = @customer.city
    %p
      %strong= model_class.human_attribute_name(:state) + ':'
      %br
      = @customer.state
    %p
      %strong= model_class.human_attribute_name(:country) + ':'
      %br
      = @customer.country
    %p
      %strong Landline:
      %br
      = @customer.lphone
    %p
      %strong Mobile Number:
      %br
      = @customer.mphone
    / %p
    /   %strong= model_class.human_attribute_name(:email) + ':'
    /   %br
    /   = @customer.email
    / %p
    /   %strong= model_class.human_attribute_name(:comments) + ':'
    /   %br
    /   = @customer.comments

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), customers_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_path(@customer), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_path(@customer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  .row
    .span12#main-content
      .row
        .span11{:style => 'margin-right:20px'}
          .current_user_requests
            = render :partial => 'shared/current_user_requests'


