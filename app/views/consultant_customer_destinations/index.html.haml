- model_class = ConsultantCustomerDestination
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:vacation_consultant_id)
      %th= model_class.human_attribute_name(:customer_id)
      %th= model_class.human_attribute_name(:cust_iti_header_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @consultant_customer_destinations.each do |consultant_customer_destination|
      %tr
        %td= link_to consultant_customer_destination.id, consultant_customer_destination_path(consultant_customer_destination)
        %td= consultant_customer_destination.vacation_consultant_id
        %td= consultant_customer_destination.customer_id
        %td= consultant_customer_destination.cust_iti_header_id
        %td= consultant_customer_destination.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_consultant_customer_destination_path(consultant_customer_destination), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), consultant_customer_destination_path(consultant_customer_destination), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_consultant_customer_destination_path, :class => 'btn btn-primary'
