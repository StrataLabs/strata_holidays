/     = f.select :points_of_attraction_id, options_for_select(build_poa_options(@poa_all), poa.id), :label => false, :class => 'input-medium', :placeholder => 'POA'
/     = f.input_field :day_number, :label => false, :class => 'input-medium', :placeholder => 'Day Number'
/     &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
/     = f.input_field :preferred_time_of_arrival, :label => false, :class => 'input-mini'
