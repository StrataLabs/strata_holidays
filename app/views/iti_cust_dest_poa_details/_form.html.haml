= simple_form_for @iti_cust_dest_poa_detail, :html => { :class => 'form-inline' } do |f|
  - @dest_details.each do |dest|
    = f.input_field "dest_iti_detail[]", :value => dest.dest_iti_header.dest_iti_name,:label => false, :placeholder => 'Dest Iti Detail', :class => 'input-medium', :readonly => true
    = f.input_field :points_of_attraction, :value => dest.points_of_attraction.name, :label => false, :placeholder => 'POA', :readonly => true
    = f.input_field :day_number, :value => dest.dest_iti_header.day_number, :name => "day_number[]", :label => false, :class => 'input-medium', :placeholder => 'Day Number'
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    = f.input_field :preferred_time_of_arrival, :name => "preferred_time_of_arrival[]" , :label => false, :class => 'input-mini'
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    = f.input_field :preferred_time_of_departure, :name => "preferred_time_of_departure[]", :label => false, :class => 'input-mini'
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    = f.hidden_field :dest_iti_detail_id, :name => "dest_iti_detail_id[]", :value => dest.id
    = f.hidden_field :points_of_attraction_id, :name => "points_of_attraction_id[]", :value => dest.points_of_attraction.id
    <br/>
    <br/>
    / .form-actions
    /= f.button :submit , "Create", :class => 'btn-primary btn-mini'
    / = link_to t('.cancel', :default => t("helpers.links.cancel")), iti_cust_dest_poa_details_path, :class => 'btn'
  = f.hidden_field :cust_iti_detail_id, :value => params[:cust_iti_detail_id]
  = f.button :submit , "Create", :class => 'btn-primary'