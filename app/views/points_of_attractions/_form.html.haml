= form_for @points_of_attraction, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :type_id, :class => 'control-label'
    .controls
      = f.text_field :type_id, :class => 'text_field'
  .control-group
    = f.label :comments, :class => 'control-label'
    .controls
      = f.text_field :comments, :class => 'text_field'
  .control-group
    = f.label :destination_id, :class => 'control-label'
    .controls
      = f.text_field :destination_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), points_of_attractions_path, :class => 'btn'
