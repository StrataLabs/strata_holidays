- model_class = PointsOfAttraction
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:destination_id) + ':'
  %br
  = @points_of_attraction.destination_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @points_of_attraction.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @points_of_attraction.description
%p
  %strong= model_class.human_attribute_name(:type_id) + ':'
  %br
  = @points_of_attraction.poa_type_id
%p
  %strong= model_class.human_attribute_name(:comments) + ':'
  %br
  = @points_of_attraction.comments
%p
  %strong= model_class.human_attribute_name(:preferred_start_time) + ':'
  %br
  = @points_of_attraction.preferred_start_time
%p
  %strong= model_class.human_attribute_name(:preferred_end_time) + ':'
  %br
  = @points_of_attraction.preferred_end_time
%p
  %strong= model_class.human_attribute_name(:available_images) + ':'
  %br
  = image_tag @points_of_attraction.image.url(:medium)
  = image_tag @points_of_attraction.image.url(:square)
  = image_tag @points_of_attraction.image.url(:thumb)
  = image_tag @points_of_attraction.image.url(:thumbnail)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), points_of_attractions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_points_of_attraction_path(@points_of_attraction), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), points_of_attraction_path(@points_of_attraction), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
