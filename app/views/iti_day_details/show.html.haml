- model_class = ItiDayDetail
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:iti_header_id) + ':'
  %br
  = @iti_day_detail.iti_header_id
%p
  %strong= model_class.human_attribute_name(:day_number) + ':'
  %br
  = @iti_day_detail.day_number
%p
  %strong= model_class.human_attribute_name(:points_of_attraction_id) + ':'
  %br
  = @iti_day_detail.points_of_attraction_id
%p
  %strong= model_class.human_attribute_name(:start_time) + ':'
  %br
  = @iti_day_detail.start_time
%p
  %strong= model_class.human_attribute_name(:end_time) + ':'
  %br
  = @iti_day_detail.end_time
%p
  %strong= model_class.human_attribute_name(:comments) + ':'
  %br
  = @iti_day_detail.comments

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), iti_day_details_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_iti_day_detail_path(@iti_day_detail), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), iti_day_detail_path(@iti_day_detail), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
