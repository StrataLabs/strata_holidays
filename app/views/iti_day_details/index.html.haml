- model_class = ItiDayDetail
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:iti_header_id)
      %th= model_class.human_attribute_name(:day_number)
      %th= model_class.human_attribute_name(:points_of_attraction_id)
      %th= model_class.human_attribute_name(:start_time)
      %th= model_class.human_attribute_name(:end_time)
      %th= model_class.human_attribute_name(:comments)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @iti_day_details.each do |iti_day_detail|
      %tr
        %td= link_to iti_day_detail.id, iti_day_detail_path(iti_day_detail)
        %td= iti_day_detail.iti_header_id
        %td= iti_day_detail.day_number
        %td= iti_day_detail.points_of_attraction_id
        %td= iti_day_detail.start_time
        %td= iti_day_detail.end_time
        %td= iti_day_detail.comments
        %td= iti_day_detail.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_iti_day_detail_path(iti_day_detail), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), iti_day_detail_path(iti_day_detail), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_iti_day_detail_path, :class => 'btn btn-primary'
