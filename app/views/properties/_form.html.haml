= simple_form_for @property, :html => { :class => 'form-horizontal' } do |f|
  = f.association :destination, :include_blank => false
  = f.input :name, :class => 'text_field'
  = f.input :property_type, :class => 'text_field'
  = f.input :official_rating, :class => 'text_field'
  = f.input :customer_rating, :class => 'text_field'
  = f.input :restaurant, :as => :boolean
  = f.input :pool, :as => :boolean
  = f.input :fun_zone, :as => :boolean
  = f.input :comments, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), properties_path, :class => 'btn'
