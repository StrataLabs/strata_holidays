- model_class = Property
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:destination_id) + ':'
  %br
  = @property.destination_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @property.name
%p
  %strong= model_class.human_attribute_name(:property_type) + ':'
  %br
  = @property.property_type
%p
  %strong= model_class.human_attribute_name(:official_rating) + ':'
  %br
  = @property.official_rating
%p
  %strong= model_class.human_attribute_name(:customer_rating) + ':'
  %br
  = @property.customer_rating
%p
  %strong= model_class.human_attribute_name(:restaurant) + ':'
  %br
  = @property.restaurant
%p
  %strong= model_class.human_attribute_name(:pool) + ':'
  %br
  = @property.pool
%p
  %strong= model_class.human_attribute_name(:fun_zone) + ':'
  %br
  = @property.fun_zone
%p
  %strong= model_class.human_attribute_name(:comments) + ':'
  %br
  = @property.comments

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), properties_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_property_path(@property), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), property_path(@property), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
