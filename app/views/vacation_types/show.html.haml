- model_class = VacationType
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:vac_type) + ':'
  %br
  = @vacation_type.vac_type

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), vacation_types_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_vacation_type_path(@vacation_type), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), vacation_type_path(@vacation_type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
