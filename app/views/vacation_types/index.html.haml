- model_class = VacationType
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:vac_type)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @vacation_types.each do |vacation_type|
      %tr
        %td= link_to vacation_type.id, vacation_type_path(vacation_type)
        %td= vacation_type.vac_type
        %td=vacation_type.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_vacation_type_path(vacation_type), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), vacation_type_path(vacation_type), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_vacation_type_path, :class => 'btn btn-primary'
