= simple_form_for @vacation_consultant, :html => { :class => 'form-horizontal', :multipart => true } do |f|
  = f.input :name
  = f.input :address_1, :as => :text
  = f.input :address_2, :as => :text
  = f.input :city
  = f.input :state
  = f.input :country, type: :select, collection: (ActionView::Helpers::FormOptionsHelper::COUNTRIES.zip(ActionView::Helpers::FormOptionsHelper::COUNTRIES))
  = f.input :lphone
  = f.input :mphone
  = f.input :email
  = f.input :planning
  = f.input :booking
  = f.input :preferred_neighborhood, :as => :text
  = f.input :preferred_locations,  collection: Destination.all, :allow_blank => false, input_html: { "data-placeholder"=>"Select Destinations", class: 'chzn-select' ,:multiple => true }
  = f.input :comments, :as => :text
  = f.input :profile_picture
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), vacation_consultants_path, :class => 'btn'
