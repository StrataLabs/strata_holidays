= simple_form_for @vacation_consultant, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :address_1, :as => :text
  = f.input :address_2, :as => :text
  = f.input :city
  = f.input :state
  = f.input :country
  = f.input :lphone
  = f.input :mphone
  = f.input :email
  = f.input :planning
  = f.input :booking
  = f.input :preferred_neighborhood, :as => :text
  = f.input :preferred_locations, :as => :text
  = f.input :comments, :as => :text
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), vacation_consultants_path, :class => 'btn'
