- model_class = VacationConsultant
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @vacation_consultant.name
%p
  %strong= model_class.human_attribute_name(:address_1) + ':'
  %br
  = @vacation_consultant.address_1
%p
  %strong= model_class.human_attribute_name(:address_2) + ':'
  %br
  = @vacation_consultant.address_2
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @vacation_consultant.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @vacation_consultant.state
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @vacation_consultant.country
%p
  %strong= model_class.human_attribute_name(:lphone) + ':'
  %br
  = @vacation_consultant.lphone
%p
  %strong= model_class.human_attribute_name(:mphone) + ':'
  %br
  = @vacation_consultant.mphone
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @vacation_consultant.email
%p
  %strong= model_class.human_attribute_name(:comments) + ':'
  %br
  = @vacation_consultant.comments

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), vacation_consultants_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_vacation_consultant_path(@vacation_consultant), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), vacation_consultant_path(@vacation_consultant), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
