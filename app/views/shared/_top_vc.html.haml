.box
  .title
    Top Vacation Consultants
  .content
    - @vcs.each do |vc|
      .box
        .row
          .span1{:style => 'padding-top:5px;padding-left:5px'}
            .vc_image.imgborder
              =image_tag("#{asset_path("unwinders/vc_#{vc.id}.jpg")}", :onerror => "this.src= 'https://s3.amazonaws.com/dev.justbooksclc.com/strata_holidays/default.jpg';")
          .span2{:style => 'padding-top:16px;color:black;margin-left:2px'}
            %b{:style => "font-size:16px"}
              = link_to "#{vc.name}", vc_unwinders_path(:id => "#{vc.id}")
            %br
              = vc.city
            %br
        %br
        .vc_details
          %table.table.table-condensed{:style => 'margin-bottom:0px'}
            %tr
              %th Top Destination
              %th Rating
              %th Trips Planned
            %tr
              %td Kodai
              %td 5
              %td 20
      %br