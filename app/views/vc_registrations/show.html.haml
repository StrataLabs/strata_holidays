- model_class = VcRegistration
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @vc_registration.name
%p
  %strong= model_class.human_attribute_name(:address_1) + ':'
  %br
  = @vc_registration.address_1
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @vc_registration.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @vc_registration.state
%p
  %strong= model_class.human_attribute_name(:preferred_neighborhood) + ':'
  %br
  = @vc_registration.preferred_neighborhood
%p
  %strong= model_class.human_attribute_name(:planning) + ':'
  %br
  = @vc_registration.planning
%p
  %strong= model_class.human_attribute_name(:booking) + ':'
  %br
  = @vc_registration.booking
%p
  %strong= model_class.human_attribute_name(:preferred_locations) + ':'
  %br
  = @vc_registration.preferred_locations
%p
  %strong= model_class.human_attribute_name(:lphone) + ':'
  %br
  = @vc_registration.lphone
%p
  %strong= model_class.human_attribute_name(:mphone) + ':'
  %br
  = @vc_registration.mphone
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @vc_registration.email
%p
  %strong= model_class.human_attribute_name(:comments) + ':'
  %br
  = @vc_registration.comments
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @vc_registration.country

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), vc_registrations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_vc_registration_path(@vc_registration), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), vc_registration_path(@vc_registration), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
