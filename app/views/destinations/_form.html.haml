= simple_form_for @destination, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :description, :as => :text
  = f.input :image_url
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), destinations_path, :class => 'btn'
