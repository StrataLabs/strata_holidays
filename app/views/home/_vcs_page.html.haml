.box
  .content{:style => 'padding-left:50px;background:#fff8dd'}
    .row
      - @vcs.each do |vc|
        .span3.box{:style => 'margin-left:10px'}
          .vc-pro-header{:style => 'background:#ffcc11'}
            .row
              .span1{:style => 'padding-left:10px'}
                .vc_image.imgborder
                  =image_tag("#{asset_path("unwinders/#{vc.name.downcase}.jpg")}", :onerror => "this.src= 'https://s3.amazonaws.com/dev.justbooksclc.com/strata_holidays/default.jpg';")
              .span2{:style => 'padding-top:15px;margin-left:5px; color:black'}
                %b{:style => "font-size:20px"}
                  = link_to "#{vc.name}", vc_unwinders_path(:id => "#{vc.id}")
                %br
                  = vc.city
          %table.table.my-table-striped.table-condensed{:style => 'margin-bottom:0px'}
            %tr
              %td{:style => 'font-weight:bold;text-align:center;font-size:13pt;background:white'}
                2108 nights planned
            %tr
              %td
                %b Top Destinations
                %br
                %b National:
                Ooty, Kodai, Goa, Mangalore
                %br
                %b International:
                Germany, New Zealand, France
            %tr
              %td{:style => 'background:white'}
                %b Customer Reviews
                %br
                Excellent planning, extremely customer-friendly