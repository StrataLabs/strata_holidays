- model_class = ItiHeader
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:iti_type)
      %th= model_class.human_attribute_name(:vacation_type_id)
      %th= model_class.human_attribute_name(:iti_start_date)
      %th= model_class.human_attribute_name(:iti_end_date)
      %th= model_class.human_attribute_name(:season)
      %th= model_class.human_attribute_name(:duration)
      %th= model_class.human_attribute_name(:no_of_people)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @iti_headers.each do |iti_header|
      %tr
        %td= link_to iti_header.id, iti_header_path(iti_header)
        %td= iti_header.name
        %td= iti_header.iti_type
        %td= iti_header.vacation_type_id
        %td= iti_header.iti_start_date
        %td= iti_header.iti_end_date
        %td= iti_header.season
        %td= iti_header.duration
        %td= iti_header.no_of_people
        %td= iti_header.created_at
        %td
          = link_to t('.new', :default => t("helpers.links.clone")), new_iti_header_path(:id => iti_header.id), :class => 'btn btn-mini'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_iti_header_path(iti_header), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), iti_header_path(iti_header), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_iti_header_path, :class => 'btn btn-primary'
