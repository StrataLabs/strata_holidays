= simple_form_for @iti_destination_xref, :html => { :class => 'form-horizontal' } do |f|
  = f.association :iti_header
  = f.association :destination
  / = f.association :destination_group
  = f.input :dest_start_date
  = f.input :dest_end_date
  = f.input :season
  = f.input :duration
  = f.input :no_of_people
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), iti_destination_xrefs_path, :class => 'btn'
