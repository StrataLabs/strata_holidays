= simple_form_for @iti_destination_xref, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :iti_header_id, :class => 'control-label'
    .controls
      = f.text_field :iti_header_id, :class => 'text_field'
  .control-group
    = f.label :destination_id, :class => 'control-label'
    .controls
      = f.text_field :destination_id, :class => 'text_field'
  .control-group
    = f.label :destination_group_id, :class => 'control-label'
    .controls
      = f.text_field :destination_group_id, :class => 'text_field'
  .control-group
    = f.label :dest_start_date, :class => 'control-label'
    .controls
      = f.text_field :dest_start_date, :class => 'text_field'
  .control-group
    = f.label :dest_end_date, :class => 'control-label'
    .controls
      = f.text_field :dest_end_date, :class => 'text_field'
  .control-group
    = f.label :season, :class => 'control-label'
    .controls
      = f.text_field :season, :class => 'text_field'
  .control-group
    = f.label :duration, :class => 'control-label'
    .controls
      = f.text_field :duration, :class => 'text_field'
  .control-group
    = f.label :no_of_people, :class => 'control-label'
    .controls
      = f.text_field :no_of_people, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), iti_destination_xrefs_path, :class => 'btn'
