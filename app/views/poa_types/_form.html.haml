= form_for @poa_type do |f|
  - if @poa_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poa_type.errors.count, "error")} prohibited this poa_type from being saved:"
      %ul
        - @poa_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :meant_fof
    = f.text_field :meant_fof
  .field
    = f.label :time_can_be_spent
    = f.text_field :time_can_be_spent
  .field
    = f.label :comments
    = f.text_field :comments
  .actions
    = f.submit 'Save'
