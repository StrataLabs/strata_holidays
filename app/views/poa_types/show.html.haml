- model_class = PoaType
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:poa_type) + ':'
  %br
  = @poa_type.poa_type
%p
  %strong= model_class.human_attribute_name(:time_can_be_spent) + ':'
  %br
  = @poa_type.time_can_be_spent
%p
  %strong= model_class.human_attribute_name(:comments) + ':'
  %br
  = @poa_type.comments

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), poa_types_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_poa_type_path(@poa_type), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), poa_type_path(@poa_type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
