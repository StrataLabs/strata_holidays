= simple_form_for @dest_iti_detail, :html => { :class => 'form-horizontal' } do |f|
  = f.association :dest_iti_header, :label_method => lambda{|dest| "#{dest.dest_iti_name} - #{dest.destination.name}"}
  = f.input :day_number
  = f.association :points_of_attraction
  = f.input :comments
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), dest_iti_details_path, :class => 'btn'
