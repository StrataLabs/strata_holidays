- model_class = DestItiDetail
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:dest_iti_header_id) + ':'
  %br
  = @dest_iti_detail.dest_iti_header_id
%p
  %strong= model_class.human_attribute_name(:day_number) + ':'
  %br
  = @dest_iti_detail.day_number
%p
  %strong= model_class.human_attribute_name(:points_of_attraction_id) + ':'
  %br
  = @dest_iti_detail.points_of_attraction_id
%p
  %strong= model_class.human_attribute_name(:comments) + ':'
  %br
  = @dest_iti_detail.comments

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), dest_iti_details_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_dest_iti_detail_path(@dest_iti_detail), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), dest_iti_detail_path(@dest_iti_detail), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
