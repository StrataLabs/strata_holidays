- model_class = CustItiRequest
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:customer_id) + ':'
  %br
  = @cust_iti_request.customer_id
%p
  %strong= model_class.human_attribute_name(:dest_type) + ':'
  %br
  = @cust_iti_request.dest_type
%p
  %strong= model_class.human_attribute_name(:destinations) + ':'
  %br
  = @cust_iti_request.destinations
%p
  %strong= model_class.human_attribute_name(:vacation_type_id) + ':'
  %br
  = @cust_iti_request.vacation_type_id
%p
  %strong= model_class.human_attribute_name(:start_date) + ':'
  %br
  = @cust_iti_request.start_date
%p
  %strong= model_class.human_attribute_name(:end_date) + ':'
  %br
  = @cust_iti_request.end_date
%p
  %strong= model_class.human_attribute_name(:no_of_adults) + ':'
  %br
  = @cust_iti_request.no_of_adults
%p
  %strong= model_class.human_attribute_name(:no_of_children) + ':'
  %br
  = @cust_iti_request.no_of_children

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cust_iti_requests_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_cust_iti_request_path(@cust_iti_request), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), cust_iti_request_path(@cust_iti_request), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
